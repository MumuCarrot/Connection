<Page x:Class="LogInPage.ClientWindowSettingsFrame"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LogInPage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Settings" Loaded="Page_Loaded">

    <!-- Frame -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <!-- User Account settings -->
            <Border Grid.Column="1"
                    CornerRadius="16"
                    Background="#FFBFE6FF"
                    x:Name="SettingsBorder"
                    Margin="5">
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <!-- Avatar Name Login -->
                    <Grid Margin="0 30 0 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="1.5*"/>
                        </Grid.ColumnDefinitions>
                        <!-- Avatar -->
                        <Grid Grid.Column="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition Height="60"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Border Background="Black" 
                                    CornerRadius="60" 
                                    Grid.Column="1"
                                    Grid.Row="1"/>
                        </Grid>
                        <!-- Name Login -->
                        <Grid Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <TextBox Grid.Row="1"
                                     x:Name="UserName"
                                     BorderBrush="Transparent"
                                     Background="#FFDCF1FF"/>
                            <TextBox Grid.Row="3"
                                     x:Name="UserLogin"
                                     BorderBrush="Transparent"
                                     Background="#FFDCF1FF"/>
                        </Grid>
                    </Grid>
                <StackPanel Grid.Row="1">
                    <TextBox Height="50"
                             x:Name="AboutMe"
                             VerticalAlignment="Top"
                             BorderBrush="Transparent"
                             Background="#FFDCF1FF"
                             MaxLength="100"
                             TextWrapping="Wrap"/>

                    <Button x:Name="Update"
                            Height="25" 
                            Width="100" 
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Bottom"
                            BorderBrush="Transparent"
                            Background="#FF8EECBB"
                            Content="Update Profile"
                            Margin="0 5"
                            Click="Update_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
