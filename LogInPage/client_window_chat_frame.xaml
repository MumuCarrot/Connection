<Page x:Class="LogInPage.ClientWindowChatFrame"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LogInPage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="client_window_chat_frame">

    <Grid Background="AliceBlue"
          PreviewKeyDown="Grid_PreviewKeyDown">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0">
            <StackPanel x:Name="Table"
                        VerticalAlignment="Bottom"/>
        </ScrollViewer>
        <!-- TextBox -->
        <Grid Grid.Row="1"
              Background="#FFE2F4FF">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="40"/>
            </Grid.ColumnDefinitions>

            
            <TextBox x:Name="MessageTextBox" 
                     Margin="5"
                     Height="20"
                     BorderBrush="Transparent"
                     Background="Transparent"
                     TextWrapping="NoWrap"/>
            <Button Grid.Column="1"
                    Click="Send_Click" Background="#FFA2DCFF"/>
        </Grid>
    </Grid>
</Page>
